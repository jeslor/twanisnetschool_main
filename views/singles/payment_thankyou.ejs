<%(layout('layout/boilerplate'))%>
<div class="payment-thankyou">
  <div class="container payment-thankyou-container">
    <div class="row">
      <div class="col-md-8 col-lg-10 offset-lg-1 offset-md-2">
        <div class="register-thankyou">
          <h1>Payment completed!</h1>
          <p style="opacity: 0.7">
            You are all set to start using our premium features.
          </p>
          <div class="payment-animation">
            <lottie-player
              src="/public/images/lottiefiles/payment.json"
              background="transparent"
              speed="0.5"
              style="width: 70%; height: 100%"
              loop
              autoplay
            ></lottie-player>
          </div>
          <div class="actionButtons">
            <% if(currUser && currUser.username) {%>
            <a href="/dashboard/<%=currUser.username%>" class="btn main_button">
              Go to Dashboard
              <span class="material-symbols-outlined"> team_dashboard </span>
            </a>
            <% }%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

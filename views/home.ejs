</div>

<div class="sample_videos section_gap">
  <div class="container">
    <h2 class="sectionSubtitle">
      Sample Videos
      <span class="material-symbols-outlined"> play_circle </span>
    </h2>
    <div class="sample_video_content">
      <div class="row">
        <% for(const sampleVideo of sampleVideos){%>
        <div class="col-sm-6 col-lg-3">
          <div class="sample_video">
            <a
              href="/dashboard/free/video/playnow/<%=sampleVideo._id%>"
              class="sample_video__image"
            >
              <img src="/images/sample_video_1.jpg" alt="" />
              <span class="material-symbols-outlined"> play_circle </span>
            </a>
            <div class="sample_video__content">
              <h5 class="sample_video__title">
                <span class="sample_videoSubject"><%=sampleVideo.subject%></span
                >: <%=sampleVideo.level%>
              </h5>
              <h6><strong>Topic</strong>: <%=sampleVideo.topic%></h6>
              <small class="sample_video__description">
                <%=sampleVideo.title%>
              </small>
            </div>
          </div>
        </div>
        <%} %>
      </div>
    </div>
  </div>
</div>

<%(layout('layout/boilerplate')) %>

<div class="landingPage">
  <div class="landingPage_rotate"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="landingPage_content">
          <h1 class="landingPage__title d-none d-sm-block">
            <span class="landingPage__title--highlight"
              >Remote Learning Simplified</span
            >
            We are Uganda's Biggest Secondary School Video Library
          </h1>
          <h1 class="landingPage__title d-sm-none d-block">
            <span class="landingPage__title--highlight"
              >Remote Learning Simplified</span
            >
          </h1>
          <p class="landingPage__description">
            Study anywhere, anytime. Make learning and teaching more effective
            with active participation and student collaboration
          </p>
          <div class="landing_page_user_buttons">
            <% if(currUser && currUser.username) {%>
            <a href="/dashboard/<%=currUser.username%>" class="btn main_button">
              Go to Dashboard
              <span class="material-symbols-outlined"> team_dashboard </span>
            </a>
            <% } else { %>
            <a href="/register" class="btn main_button"
              >Register
              <span class="material-symbols-outlined"> face_3 </span></a
            >
            <a href="/login" class="btn secondary_button"
              >Login
              <span class="material-symbols-outlined">
                lock_open_right
              </span></a
            >
            <% } %>
          </div>
        </div>
      </div>
      <!-- <div class="col-lg-8 offset-lg-2 justify-content-center">
        <div class="landingPage__image">
          <lottie-player
            src="/images/lottiefiles/landing_page_animation.json"
            background="transparent"
            speed="1"
            style="width: 50%; height: 50%"
            loop
            autoplay
          ></lottie-player>
        </div>
      </div> -->
    </div>
  </div>
</div>

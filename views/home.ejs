<%(layout('layout/boilerplate')) %>

<div class="landingPage">
  <div class="landingPage_rotate"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="landingPage_content">
          <h1 class="landingPage__title d-none d-sm-block">
            <span class="landingPage__title--highlight"
              >Transforming learning for students</span
            >
            We are East Africa's Biggest Secondary School Video Library
          </h1>
          <h1 class="landingPage__title d-sm-none d-block">
            <span class="landingPage__title--highlight"
              >Transforming learning for students</span
            >
          </h1>
          <p class="landingPage__description">
            Study anywhere, anytime. Make learning of your secondary student
            more effective with active participation and student collaboration.
          </p>
          <div class="landing_page_user_buttons">
            <% if(currUser && currUser.username) {%>
            <a href="/dashboard/<%=currUser.username%>" class="btn main_button">
              Go to Dashboard
              <span class="material-symbols-outlined"> team_dashboard </span>
            </a>
            <% } else { %>
            <a href="/register" class="btn main_button"
              >Register
              <span class="material-symbols-outlined"> face_3 </span></a
            >
            <a href="/login" class="btn secondary_button"
              >Login
              <span class="material-symbols-outlined">
                lock_open_right
              </span></a
            >
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="subjects section_gap">
  <div class="container">
    <div class="subject_slider_overlay"></div>
    <div class="subject_slider owl-carousel owl-theme">
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> science </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">Chemistry</h4>
        </div>
      </div>
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> psychiatry </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">Biology</h4>
        </div>
      </div>
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> calculate </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">Mathematics</h4>
        </div>
      </div>
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> scale </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">Physics</h4>
        </div>
      </div>
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> history </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">History</h4>
        </div>
      </div>
      <div class="single_subject_slider">
        <div class="subject_slider__image">
          <span class="material-symbols-outlined"> contract_edit </span>
        </div>
        <div class="subject_slider__content">
          <h4 class="subject_slider__title">English</h4>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="sample_videos section_gap">
  <div class="sampaleVideoContainer">
    <div class="row allvideo_container">
      <div class="all_video_left col-lg-6">
        <div class="all_video_photoHolder">
          <img src="/images/allVideo.webp" alt="all video photo" />
        </div>
      </div>
      <div class="all_video_right col-lg-6">
        <h2 class="sectionSubtitle">
          Empower your child for exam success
          <span class="material-symbols-outlined"> play_circle </span>
        </h2>
        <p class="all_video_description">
          Equip your child with the finest resources to ensure they pass their
          exams with confidence. Our comprehensive video library is designed to
          provide thorough coverage of all essential and examinable topics,
          making it an indispensable tool for academic success.
        </p>
        <p class="all_video_description">
          Each video is taught by qualified secondary school teachers who bring
          their expertise and experience to the classroom. They employ effective
          teaching methods to simplify complex concepts, making learning
          engaging and accessible for your child.
        </p>

        <p class="all_video_description">
          Start your child's journey to academic excellence today.
        </p>
        <a
          href="/all_videos"
          class="btn main_button d-flex align-items-center width-fit-content"
        >
          View All Videos
          <span class="material-symbols-outlined"> play_circle </span>
        </a>
      </div>
    </div>
    <h2 class="sectionSubtitle">
      Sample Videos
      <span class="material-symbols-outlined"> play_circle </span>
    </h2>
    <div class="sample_video_content">
      <div class="owl-sampleVideos owl-carousel owl-theme">
        <% for(const sampleVideo of sampleVideos){%>
        <div class="item">
          <div class="sample_video">
            <a
              href="/dashboard/free/video/playnow/<%=sampleVideo._id%>"
              class="sample_video__image"
            >
              <video id="vid1" src="https://youtu.be/WxOhI5X5GlA"></video>
              <!-- <img src="/images/sample_video_1.jpg" alt="" /> -->
              <span class="material-symbols-outlined"> play_circle </span>
            </a>
            <div class="sample_video__content">
              <h5 class="sample_video__title">
                <span class="sample_videoSubject"><%=sampleVideo.subject%></span
                >: <%=sampleVideo.level%>
              </h5>
              <h6><strong>Topic</strong>: <%=sampleVideo.topic%></h6>
              <small class="sample_video__description">
                <%=sampleVideo.title%>
              </small>
            </div>
          </div>
        </div>
        <%} %>
      </div>
    </div>
  </div>
</div>
